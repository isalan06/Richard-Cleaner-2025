<Window x:Class="CleanerControlApp.Vision.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="使用者登入" Height="220" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="帳號：" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="0" Margin="60,0,0,0" Height="28" Width="200"/>

        <TextBlock Text="密碼：" Grid.Row="1" VerticalAlignment="Center" Margin="0,15,0,0"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="60,15,0,0" Height="28" Width="200"/>

        <Button Content="登入" Grid.Row="2" Margin="0,25,0,0" Width="80" Height="32" HorizontalAlignment="Right"
                Click="LoginButton_Click"/>
        <TextBlock x:Name="ErrorText" Grid.Row="3" Foreground="Red" Margin="0,10,0,0"/>
    </Grid>
</Window>