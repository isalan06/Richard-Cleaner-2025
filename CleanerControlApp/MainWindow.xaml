<Window x:Class="CleanerControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanerControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowStartupLocation="Manual" Left="0" Top="0"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title Bar -->
            <RowDefinition Height="*"/> <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Top Title Bar with user box +5 boxes/buttons -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="6">
            <DockPanel LastChildFill="False">
                <!-- User info box on the left -->
                <Border DockPanel.Dock="Left" Background="#FF3A3A3A" Padding="6" Margin="0,0,8,0" CornerRadius="4" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" Margin="0,0,8,0" VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentUserNameText" Text="帳號: -" Foreground="White" FontWeight="Bold"/>
                            <TextBlock x:Name="CurrentUserRoleText" Text="權限: -" Foreground="White" FontSize="12"/>
                        </StackPanel>
                        <Button x:Name="LogoutButton" Content="登出" Margin="4,0,0,0" Padding="8,4" Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>

                <UniformGrid Columns="8" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button x:Name="BtnHome" Content="Home" Margin="4" Padding="10,8" Click="BtnHome_Click" />
                    <Button x:Name="BtnManual" Content="Manual" Margin="4" Padding="10,8" Click="BtnManual_Click" />
                    <Button x:Name="BtnIO" Content="IO" Margin="4" Padding="10,8" Click="BtnIO_Click" />
                    <Button x:Name="BtnAlarm" Content="Alarm" Margin="4" Padding="10,8" Click="BtnAlarm_Click" />
                    <Button x:Name="BtnInfo" Content="Info" Margin="4" Padding="10,8" Click="BtnInfo_Click" />
                    <Button x:Name="BtnSetting" Content="Setting" Margin="4" Padding="10,8" Click="BtnSetting_Click" />
                    <Button x:Name="BtnUser" Content="User" Margin="4" Padding="10,8" Click="BtnUser_Click" />
                    <Button x:Name="BtnDeveloper" Content="Developer" Margin="4" Padding="10,8" Click="BtnDeveloper_Click" />
                </UniformGrid>
            </DockPanel>
        </Border>

        <!-- Main content area for switching modules -->
        <Border Grid.Row="1" Background="#FFF" Padding="8">
            <ContentControl x:Name="MainContent" />
        </Border>

        <!-- Status bar at bottom -->
        <StatusBar Grid.Row="2" Background="#FFEEEEEE">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock x:Name="VersionTextBlock" Text="Version"/>
            </StatusBarItem>
            <!-- Additional status items can be added here -->
        </StatusBar>

    </Grid>
</Window>
